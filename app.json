{
  "expo": {
    "name": "switch-frontend",
    "slug": "switch-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "src/assets/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "$(PRODUCT_NAME)에서 생체인증을 위해 필요합니다."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "스위치를 사용하기 위해서 사진 접근 권한이 필요합니다."
        }
      ],
      "expo-secure-store"
    ],
    "newArchEnabled": true
  }
}
